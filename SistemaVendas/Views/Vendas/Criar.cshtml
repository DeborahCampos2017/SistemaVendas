@model SistemaVendas.Models.Vendas

@{
    ViewData["Title"] = "Nova Venda";
}

<h1> Nova Venda</h1>

<hr/>

<div class="rool">
    <div class="coll-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="DataVenda" class="control-label"></label>
                <input asp-for="DataVenda" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IdProduto" class="control-label"></label>
                <input asp-for="IdProduto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NomeProduto" class="control-label"></label>
                <input asp-for="NomeProduto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ValorProduto" class="control-label"></label>
                <input asp-for="ValorProduto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NomeVendedor" class="control-label"></label>
                <input asp-for="NomeVendedor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CpfVendedor" class="control-label"></label>
                <input asp-for="CpfVendedor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EmailVendedor" class="control-label"></label>
                <input asp-for="EmailVendedor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<div>
    <a asp-action="Index">Voltar</a>
</div>
